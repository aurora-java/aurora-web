<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:view>
        <a:link id="full_top_use_link" url="${/request/@context_path}/modules/sys/SYS2520/full_top_use.screen"/>
        <script><![CDATA[
            function onclick2() {
                new Aurora.Window({
                    id: 'full_top_use',
                    title:'最常用功能',
                    url: /*full_top_use.screen*/$('full_top_use_link').getUrl(),
                    width: 1000,
                    height: 550
                });
            }
            function query2(){
                $('min_top_use_ds').query();
            }
            ]]></script>
        <a:dataSets>
            <a:dataSet id="min_top_use_ds" model="sys.SYS2520.sys_analytics_top_use" pageSize="20" queryDataSet="query_ds">
                <a:fields>
                    <a:field name="url" prompt="页面"/>
                    <a:field name="visits" datatype="float" prompt="visits"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:chart bindTarget="min_top_use_ds" inverted="false" style="width: 350px; height: 200px" type="column">
                <a:title text="最常用功能"/>
                <a:xAxis>
                    <a:xAxi name="url">
                        <a:labels formatter="emptyRenderer"/>
                    </a:xAxi>
                </a:xAxis>
                <a:yAxis>
                    <a:yAxi name="visits">
                        <a:labels formatter="emptyRenderer"/>
                        <a:title text=""/>
                    </a:yAxi>
                </a:yAxis>
                <a:events>
                    <a:event name="click" handler="onclick2"/>
                </a:events>
            </a:chart>
        </a:screenBody>
    </a:view>
</a:screen>
