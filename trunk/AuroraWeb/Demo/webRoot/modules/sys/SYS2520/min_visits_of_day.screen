<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:view>
        <a:link id="full_visits_of_day_link" url="${/request/@context_path}/modules/sys/SYS2520/full_visits_of_day.screen"/>
        <script><![CDATA[
            function onclick1() {
                new Aurora.Window({
                    id: 'full_visits_of_day',
                    title:'每日访问量',
                    url: /*full_visits_of_day.screen*/$('full_visits_of_day_link').getUrl(),
                    width: 1000,
                    height: 550
                });
            }
            function query1(){
                $('min_visits_of_day_ds').query();
            }
            ]]></script>
        <a:dataSets>
            <a:dataSet id="min_visits_of_day_ds" model="sys.SYS2520.sys_analytics_summary_of_day" pageSize="100" queryDataSet="query_ds">
                <a:fields>
                    <a:field name="day" prompt="日期"/>
                    <a:field name="visits" datatype="float" prompt="visits" type="line"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:chart bindTarget="min_visits_of_day_ds" style="width: 350px; height: 200px" type="line">
                <a:title text="访问量"/>
                <a:xAxis>
                    <a:xAxi name="day">
                        <a:labels formatter="emptyRenderer"/>
                    </a:xAxi>
                </a:xAxis>
                <a:yAxis>
                    <a:yAxi name="visits">
                        <a:title text=""/>
                        <a:labels formatter="emptyRenderer"/>
                    </a:yAxi>
                </a:yAxis>
                <a:events>
                    <a:event name="click" handler="onclick1"/>
                </a:events>
            </a:chart>
        </a:screenBody>
    </a:view>
</a:screen>
